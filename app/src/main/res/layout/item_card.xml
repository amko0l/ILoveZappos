<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:elevation="3dp"
        card_view:cardCornerRadius="@dimen/card_item_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_cover_height"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/product_brand_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/thumbnail"
                android:paddingLeft="@dimen/item_title_padding"
                android:paddingRight="@dimen/item_title_padding"
                android:paddingTop="@dimen/item_title_padding"
                android:textColor="@color/album_title"
                android:textSize="@dimen/item_title" />

            <TextView
                android:id="@+id/product_desc_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/product_brand_card"
                android:paddingLeft="@dimen/item_title_padding"
                android:paddingRight="@dimen/item_title_padding"
                android:textColor="@color/album_title"
                android:textSize="@dimen/item_title" />

            <TextView
                android:id="@+id/price_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/product_desc_card"
                android:paddingBottom="@dimen/card_count_padding_bottom"
                android:paddingLeft="@dimen/item_title_padding"
                android:paddingRight="@dimen/item_title_padding"
                android:textSize="@dimen/item_title" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>